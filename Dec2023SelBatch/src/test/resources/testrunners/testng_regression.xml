<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart Regression Suite" verbose="3" thread-count="5" parallel="tests">


<listeners>
	<listener class-name="com.qa.opencart.listeners.ExtentReportListener" />
</listeners>

	<test name="LoginPageTest">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="AccountsPageTest">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="prodInfoTest">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.prodInfoTest" />
		</classes>
	</test>
	
	<test name="registrationPageTest">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.registrationPageTest" />
		</classes>
	</test>
	
	<test name="SearchResultsPageTest">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.qa.opencart.tests.SearchResultsPageTest" />
		</classes>
	</test>

</suite>